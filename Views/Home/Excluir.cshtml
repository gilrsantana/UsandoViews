@model Usuario
@{
	ViewBag.Subtitulo = "Exclusão";
}

<h1 class="text-primary">Cadastro de Usuário</h1>
<hr>
<h4>Deseja realmente excluir o usuário <span class="text-danger">@Model.Nome?</span></h4>
<form method="POST" class="w-25">
	<input type="hidden" asp-for="IdUsuario">
	
	<div class="mt-3">
		<a asp-action="Usuarios" class="btn btn-secondary" >Não</a>
		<button class="btn btn-danger">Sim</button>
	</div>
</form>

@section Footer {
	<div class="text-info">Exclusão</div>
}

@section LogoPagina{
	<img src="/img/remove_user.png" height="24" class="d-inline-block align-text-bottom" alt="" srcset="">
}