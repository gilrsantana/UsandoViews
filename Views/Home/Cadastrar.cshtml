@model UsandoViews.Models.Usuario
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="pt-br">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="/lib/bootstrap5/dist/css/bootstrap.css">
	<title>UsandoViews :: Cadastrar</title>
</head>
<body>
	<div class="container">
		<h1 class="text-primary">Cadastro de Usu√°rio</h1>
		<hr>
		<form method="POST" class="w-25">
			<input type="hidden" asp-for="IdUsuario">
			<div class="form-group">
				<label asp-for="Nome">Nome: 	</label><br>
				<input asp-for="Nome" class="form-control">
			</div>
			<div class="form-group">
				<label asp-for="Email">E-mail: </label><br>
				<input asp-for="Email" class="form-control">
			</div>
			<div class="mt-3">
				<button type="submit" class="btn btn-primary" >Cadastrar</button>
				<a href="/Home/Usuarios" class="btn btn-light">Cancelar</button></a> 
			</div>
		</form>
	</div>
	
		
</body>
</html>