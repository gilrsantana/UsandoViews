@{
	var actionAtual = ViewContext.RouteData.Values["action"].ToString();
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="/lib/bootstrap5/dist/css/bootstrap.css">
	<title>UsandoViews :: @ViewBag.Subtitulo</title>
</head>
<body>
	<nav class="navbar navbar-expand-lg bg-dark navbar-dark">
		<div class="container">
			<a class="navbar-brand" href="#">
				@if (IsSectionDefined("LogoPagina"))
				{
					@RenderSection("LogoPagina", false)
				}
				else
				{
					<img src="/img/page.png" height="24" class="d-inline-block align-text-bottom" alt="" srcset="">
				}
				Controle de usuários
			</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
			<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarMain">
				<div class="navbar-nav">
					<a class="nav-link @(actionAtual =="Index" ? "active" : "")" asp-action="Index">Principal</a>
					<a class="nav-link @(actionAtual =="Usuarios" ? "active" : "")" asp-action="Usuarios">Usuários</a>
					<a class="nav-link @(actionAtual =="Cadastrar" ? "active" : "")" asp-action="Cadastrar">Cadastro</a>
				</div>
			</div>
		</div>
	</nav>

	<div class="container mt-2">
		@RenderBody()
	</div>

	<div class="text-light bg-dark text-center p-3 fixed-bottom">
		Todos os direitos reservados &#174; - 2022
		@RenderSection("Footer", false)
	</div>

	@RenderSection("Scripts", false)
</body>
</html>